---
import '../styles/article.css';

import { getEntry, render } from 'astro:content';
import { name } from 'spectre:globals';
import Card from '../components/Card.astro';
import Icon from '../components/Icon.astro';
import Layout from '../layouts/Layout.astro';

const resume = await getEntry('other', 'resume');
const { Content: Resume } = await render(resume!);
---

<Layout
	title={`Resume | ${name}`}
	description="Nathan Ash - Technical Services Manager and Systems Engineer based in Melbourne"
	pagefindIgnore
>
	<article slot="left" class="resume-full-width" data-pagefind-body>
		<Card>
			<div class="article-header" id="_top">
				<div class="header">
					<div class="header-container">
						<Icon type='lucide' name="file-text" width={24} height={24} class='glow-icon' />
						<h1 class="no-mt article-h1">Nathan Ash</h1>
					</div>
				</div>
			</div>
			<Resume />
			<hr class="end-of-article" />
			<a href="/" class="block-link">‚Üê Back to homepage</a>
		</Card>
	</article>
</Layout>
<style is:global>
	/* Make resume page full width */
	.resume-full-width {
		grid-column: 1 / -1 !important;
		max-width: 900px;
		margin: 0 auto;
		width: 100%;
	}
	
	/* Hide the empty right slot space */
	.layout-grid:has(.resume-full-width) {
		grid-template-columns: 1fr !important;
	}
</style>
<style>
	article {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}
</style>
